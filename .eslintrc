{
  "extends": "standard",
  "plugins": ["security", "html"],
  "rules": {
    "func-names": ["error", "never"],
    "no-tabs": 0,
    "no-param-reassign": ["off"],
    "no-extra-semi": "error",
    "semi": ["error", "never"],
    "consistent-return": ["off"],
    "no-console": ["error"],
    "import/no-unresolved": ["error", { "ignore": ["password$"] }]
  },
  "settings": {
    "html/indent": "0"
  }
}