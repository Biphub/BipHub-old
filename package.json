{
  "name": "Biphub",
  "version": "0.3.0",
  "description": "Connecting people and robots",
  "main": "dist",
  "scripts": {
    "start": "better-npm-run dev:local",
    "dev:local": "better-npm-run dev:local",
    "dev:pm2": "babel-node core/index.pm2.js",
    "dev:docker": "better-npm-run dev:docker",
    "build": "babel core -s -D -d dist/core && babel apps -s -D -d dist/apps",
    "start:web": "node dist",
    "start:web:forever": "forever dist",
    "prestart:web": "npm run -s build",
    "test:web": "eslint src",
    "js:fix": "eslint --fix ./",
    "js:lint:dev": "eslint ./",
    "js:lint:prod": "eslint --rule \"\"no-console\": [\"error\"]\" ./",
    "test:all": "mocha --compilers js:babel-core/register \"./test/**/*.js\"",
    "snyk:test": "snyk test",
    "sqlite3:fix": "npm uninstall sqlite3 && npm cache clean && npm install sqlite3@3.1.4",
    "knex:seed": "knex seed:run --knexfile=./core/bookshelf/knexfile.js",
    "knex:migrate": "knex migrate:latest --knexfile=./core/bookshelf/knexfile.js"
  },
  "betterScripts": {
    "dev:local": {
      "command": "nodemon --trace-warnings -w core -w apps --exec \"babel-node\" core/index.js",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "dev:docker": {
      "command": "nodemon -L -w core -w apps --exec \"babel-node --presets es2015,es2017,stage-0\" core/index.js",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "build": {}
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module"
    },
    "env": {
      "node": true
    },
    "rules": {
      "no-console": 0,
      "no-unused-vars": 1
    }
  },
  "repository": "bipio/biphub-core",
  "author": "Jason Shin <visualbbasic@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "babel-preset-stage-0": "^6.22.0",
    "babel-runtime": "^6.23.0",
    "better-npm-run": "0.0.14",
    "body-parser": "^1.17.0",
    "bookshelf": "^0.10.3",
    "compression": "^1.5.2",
    "cors": "^2.7.1",
    "discord.js": "^11.0.0",
    "es6-promisify": "^5.0.0",
    "express": "^4.15.0",
    "express-handlebars": "^3.0.0",
    "hbs": "^4.0.1",
    "knex": "^0.12.7",
    "lodash": "^4.17.4",
    "nconf": "^0.8.4",
    "pm2": "^2.4.3",
    "q": "^1.4.1",
    "require-all": "^2.1.0",
    "resource-router-middleware": "^0.6.0",
    "slackbots": "^1.0.2",
    "socket.io": "^1.7.3",
    "socket.io-client": "^1.7.3",
    "sqlite3": "^3.1.8",
    "winston": "^2.3.1",
    "winston-sqlite3": "^1.0.2"
  },
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-core": "^6.9.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-es2015-node5": "^1.2.0",
    "babel-preset-es2017": "^6.22.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.24.0",
    "better-npm-run": "0.0.14",
    "chai": "^3.5.0",
    "eslint": "^3.18.0",
    "eslint-config-airbnb-base": "^11.1.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-security": "^1.3.0",
    "flow-bin": "^0.42.0",
    "gulp": "^3.9.1",
    "gulp-live-server": "0.0.30",
    "gulp-shell": "^0.6.3",
    "gulp-watch": "^4.3.11",
    "mocha": "^3.2.0",
    "nodejs-dashboard": "^0.4.1",
    "nodemon": "^1.9.2",
    "rimraf": "^2.6.1",
    "run-sequence": "^1.2.2"
  }
}
